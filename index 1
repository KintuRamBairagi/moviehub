    <script>
        // Movie Database
        const movies = [
            { id: 1, title: "Dune: Part Two", year: 2024, rating: 8.8, genre: "scifi", image: "https://picsum.photos/seed/dune2/300/450", description: "Paul Atreides unites with Chani and the Fremen while seeking revenge against those who destroyed his family." },
            { id: 2, title: "Oppenheimer", year: 2023, rating: 8.9, genre: "drama", image: "https://picsum.photos/seed/oppen/300/450", description: "The story of American scientist J. Robert Oppenheimer and his role in the development of the atomic bomb." },
            { id: 3, title: "The Batman", year: 2022, rating: 8.3, genre: "action", image: "https://picsum.photos/seed/batman/300/450", description: "When a sadistic serial killer begins murdering key political figures in Gotham, Batman is forced to investigate." },
            { id: 4, title: "Smile", year: 2022, rating: 6.9, genre: "horror", image: "https://picsum.photos/seed/smile/300/450", description: "After witnessing a bizarre, traumatic incident, Dr. Rose Cotter starts experiencing frightening occurrences." },
            { id: 5, title: "Barbie", year: 2023, rating: 7.4, genre: "comedy", image: "https://picsum.photos/seed/barbie/300/450", description: "Barbie and Ken are having the time of their lives in the colorful and seemingly perfect world of Barbie Land." },
            { id: 6, title: "John Wick 4", year: 2023, rating: 8.2, genre: "action", image: "https://picsum.photos/seed/wick4/300/450", description: "John Wick uncovers a path to defeating The High Table. But before he can earn his freedom, Wick must face a new enemy." },
            { id: 7, title: "The Killer", year: 2023, rating: 7.1, genre: "thriller", image: "https://picsum.photos/seed/killer/300/450", description: "After a fatsatisfying job in Paris, a professional assassin finds himself in a psychological crisis." },
            { id: 8, title: "Avatar 2", year: 2022, rating: 7.8, genre: "scifi", image: "https://picsum.photos/seed/avatar2/300/450", description: "Jake Sully lives with his newfound family formed on the planet of Pandora." },
            { id: 9, title: "Top Gun: Maverick", year: 2022, rating: 8.6, genre: "action", image: "https://picsum.photos/seed/topgun/300/450", description: "After thirty years, Maverick is still pushing the envelope as a top naval aviator." },
            { id: 10, title: "M3GAN", year: 2023, rating: 6.5, genre: "horror", image: "https://picsum.photos/seed/megan/300/450", description: "A robotics engineer creates a lifelike doll that begins to take on a life of its own." },
            { id: 11, title: "Glass Onion", year: 2022, rating: 7.2, genre: "thriller", image: "https://picsum.photos/seed/glass/300/450", description: "Tech billionaire Miles Bron invites his friends for a getaway on his private Greek island." },
            { id: 12, title: "Everything Everywhere", year: 2022, rating: 8.1, genre: "scifi", image: "https://picsum.photos/seed/every/300/450", description: "A middle-aged Chinese immigrant is swept up in an insane adventure across the multiverse." },
            { id: 13, title: "The Menu", year: 2022, rating: 7.2, genre: "thriller", image: "https://picsum.photos/seed/menu/300/450", description: "A young couple travels to a remote island to eat at an exclusive restaurant." },
            { id: 14, title: "Nope", year: 2022, rating: 7.0, genre: "horror", image: "https://picsum.photos/seed/nope/300/450", description: "The residents of a lonely gulch in inland California bear witness to an uncanny and chilling discovery." },
            { id: 15, title: "Bullet Train", year: 2022, rating: 7.3, genre: "action", image: "https://picsum.photos/seed/bullet/300/450", description: "Five assassins aboard a fast moving bullet train discover their missions have something in common." },
            { id: 16, title: "The Banshees", year: 2022, rating: 7.8, genre: "drama", image: "https://picsum.photos/seed/banshee/300/450", description: "Two lifelong friends find themselves at an impasse when one abruptly ends their relationship." },
            { id: 17, title: "Triangle of Sadness", year: 2022, rating: 7.4, genre: "comedy", image: "https://picsum.photos/seed/triangle/300/450", description: "A celebrity couple are invited on a luxury cruise for the ultra-rich." },
            { id: 18, title: "Poor Things", year: 2023, rating: 8.0, genre: "comedy", image: "https://picsum.photos/seed/poor/300/450", description: "The incredible tale about the fantastical evolution of Bella Baxter." }
        ];

        const heroMovies = [
            { title: "Dune: Part Two", tagline: "Long live the fighters", image: "https://picsum.photos/seed/dunehero/1920/1080", rating: 8.8 },
            { title: "Oppenheimer", tagline: "The world forever changes", image: "https://picsum.photos/seed/oppenhero/1920/1080", rating: 8.9 },
            { title: "Avatar: The Way of Water", tagline: "Return to Pandora", image: "https://picsum.photos/seed/avatarhero/1920/1080", rating: 7.8 }
        ];

        let currentSlide = 0;

        // Initialize Hero Slider
        function initHeroSlider() {
            const slider = document.getElementById('heroSlider');
            slider.innerHTML = heroMovies.map((movie, index) => `
                <div class="hero-slide absolute inset-0 transition-opacity duration-700 ${index === 0 ? 'opacity-100' : 'opacity-0'}" data-index="${index}">
                    <div class="absolute inset-0 bg-cover bg-center" style="background-image: url('${movie.image}')"></div>
                    <div class="absolute inset-0 bg-gradient-to-r from-black via-black/70 to-transparent"></div>
                    <div class="absolute inset-0 bg-gradient-to-t from-[#0f0f23] via-transparent to-transparent"></div>
                    <div class="relative h-full flex items-center px-8 md:px-16 max-w-7xl mx-auto">
                        <div class="max-w-xl">
                            <span class="bg-red-600 px-3 py-1 rounded-full text-sm font-medium mb-4 inline-block">Featured</span>
                            <h1 class="text-4xl md:text-6xl font-bold mb-4">${movie.title}</h1>
                            <p class="text-xl text-gray-300 mb-4">${movie.tagline}</p>
                            <div class="flex items-center gap-4 mb-6">
                                <span class="flex items-center gap-1 text-yellow-500"><i class="fas fa-star"></i> ${movie.rating}</span>
                                <span class="text-gray-400">2024</span>
                                <span class="text-gray-400">2h 46min</span>
                            </div>
                            <div class="flex gap-4">
                                <button class="bg-red-600 hover:bg-red-700 px-6 py-3 rounded-full font-medium transition flex items-center gap-2 glow">
                                    <i class="fas fa-info-circle"></i> More Info
                                </button>
                                <button class="bg-gray-800 hover:bg-gray-700 px-6 py-3 rounded-full font-medium transition flex items-center gap-2">
                                    <i class="fas fa-plus"></i> Watchlist
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            `).join('');

            // Add slider dots
            const dotsHTML = `
                <div class="absolute bottom-8 left-1/2 -translate-x-1/2 flex gap-2 z-10">
                    ${heroMovies.map((_, i) => `<button class="slider-dot w-3 h-3 rounded-full transition ${i === 0 ? 'bg-red-500 w-8' : 'bg-gray-500'}" onclick="goToSlide(${i})"></button>`).join('')}
                </div>
            `;
            slider.insertAdjacentHTML('beforeend', dotsHTML);

            // Auto-slide
            setInterval(() => {
                currentSlide = (currentSlide + 1) % heroMovies.length;
                updateSlider();
            }, 5000);
        }

        function goToSlide(index) {
            currentSlide = index;
            updateSlider();
        }

        function updateSlider() {
            document.querySelectorAll('.hero-slide').forEach((slide, i) => {
                slide.classList.toggle('opacity-100', i === currentSlide);
                slide.classList.toggle('opacity-0', i !== currentSlide);
            });
            document.querySelectorAll('.slider-dot').forEach((dot, i) => {
                dot.classList.toggle('bg-red-500', i === currentSlide);
                dot.classList.toggle('w-8', i === currentSlide);
                dot.classList.toggle('bg-gray-500', i !== currentSlide);
                dot.classList.toggle('w-3', i !== currentSlide);
            });
        }

        // Render Movies
        function renderMovies(movieList, containerId) {
            const container = document.getElementById(containerId);
            container.innerHTML = movieList.map(movie => `
                <div class="movie-card relative rounded-xl overflow-hidden cursor-pointer transition-all duration-300" onclick="openModal(${movie.id})">
                    <img src="${movie.image}" alt="${movie.title}" class="w-full h-64 md:h-80 object-cover">
                    <div class="movie-overlay absolute inset-0 bg-gradient-to-t from-black via-black/50 to-transparent opacity-0 transition-opacity duration-300 flex flex-col justify-end p-4">
                        <div class="flex items-center gap-2 mb-2">
                            <span class="bg-red-600 px-2 py-0.5 rounded text-xs">${movie.genre.toUpperCase()}</span>
                            <span class="flex items-center gap-1 text-yellow-500 text-sm"><i class="fas fa-star"></i> ${movie.rating}</span>
                        </div>
                        <h3 class="font-semibold text-lg leading-tight">${movie.title}</h3>
                        <p class="text-gray-400 text-sm">${movie.year}</p>
                    </div>
                    <div class="absolute top-2 right-2 bg-black/70 px-2 py-1 rounded flex items-center gap-1 text-yellow-500 text-sm">
                        <i class="fas fa-star"></i> ${movie.rating}
                    </div>
                </div>
            `).join('');
        }

        // Filter Movies
        function filterMovies(genre) {
            document.querySelectorAll('.category-btn').forEach(btn => {
                btn.classList.remove('bg-red-600', 'active');
                btn.classList.add('bg-gray-800');
            });
            event.target.classList.remove('bg-gray-800');
            event.target.classList.add('bg-red-600', 'active');

            const filtered = genre === 'all' ? movies : movies.filter(m => m.genre === genre);
            renderMovies(filtered, 'movieGrid');
        }

        // Modal Functions
        function openModal(id) {
            const movie = movies.find(m => m.id === id);
            if (!movie) return;

            document.getElementById('modalContent').innerHTML = `
                <div class="relative">
                    <img src="${movie.image}" alt="${movie.title}" class="w-full h-64 md:h-96 object-cover">
                    <div class="absolute inset-0 bg-gradient-to-t from-gray-900 to-transparent"></div>
                </div>
                <div class="p-6 -mt-20 relative">
                    <div class="flex items-center gap-3 mb-3">
                        <span class="bg-red-600 px-3 py-1 rounded-full text-sm">${movie.genre.toUpperCase()}</span>
                        <span class="flex items-center gap-1 text-yellow-500"><i class="fas fa-star"></i> ${movie.rating}</span>
                        <span class="text-gray-400">${movie.year}</span>
                    </div>
                    <h2 class="text-3xl font-bold mb-4">${movie.title}</h2>
                    <p class="text-gray-300 mb-6">${movie.description}</p>
                    <div class="flex flex-wrap gap-3">
                        <button class="bg-red-600 hover:bg-red-700 px-6 py-3 rounded-full font-medium transition flex items-center gap-2">
                            <i class="fas fa-play"></i> Watch Trailer
                        </button>
                        <button class="bg-gray-700 hover:bg-gray-600 px-6 py-3 rounded-full font-medium transition flex items-center gap-2">
                            <i class="fas fa-plus"></i> Add to Watchlist
                        </button>
                        <button class="bg-gray-700 hover:bg-gray-600 px-4 py-3 rounded-full transition">
                            <i class="fas fa-share-alt"></i>
                        </button>
                    </div>
                </div>
            `;
            document.getElementById('movieModal').classList.remove('hidden');
            document.getElementById('movieModal').classList.add('flex');
            document.body.style.overflow = 'hidden';
        }

        function closeModal() {
            document.getElementById('movieModal').classList.add('hidden');
            document.getElementById('movieModal').classList.remove('flex');
            document.body.style.overflow = 'auto';
        }

        // Search Functionality
        document.getElementById('searchInput').addEventListener('input', (e) => {
            const query = e.target.value.toLowerCase();
            const filtered = movies.filter(m => m.title.toLowerCase().includes(query));
            renderMovies(filtered, 'movieGrid');
        });

        // Close modal on outside click
        document.getElementById('movieModal').addEventListener('click', (e) => {
            if (e.target.id === 'movieModal') closeModal();
        });

        // Initialize
        document.addEventListener('DOMContentLoaded', () => {
            initHeroSlider();
            renderMovies(movies, 'movieGrid');
            renderMovies([...movies].reverse().slice(0, 6), 'latestGrid');
        });
    </script>
</body>
</html>
